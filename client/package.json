{
	"name": "revivios",
	"version": "0.0.1",
	"description": "Gamified productivity app",
	"main": "index.js",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"deploy:server": "turbo run build --filter=server && turbo run deploy --filter=server",
		"deploy:app": "turbo run build --filter=app --include-dependencies --no-deps",
		"deploy:website": "turbo run build --filter=website --include-dependencies --no-deps",
		"docker": "sudo docker-compose up --build"
	},
	"author": "Billy Hawkes",
	"license": "MIT",
	"dependencies": {
		"turbo": "^1.2.5"
	},
	"devDependencies": {
		"prettier": "^2.5.1"
	},
	"engines": {
		"node": ">=10",
		"pnpm": ">=3"
	}
}
